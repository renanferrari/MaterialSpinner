<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingBottom="@dimen/activity_vertical_margin"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin">

    <fr.ganfra.materialspinner.MaterialSpinner
        android:id="@+id/spinner1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:msp_arrowColor="#0000FF"
        app:msp_arrowSize="16dp"
        app:msp_floatingLabelColor="#00FF00"
        app:msp_floatingLabelText="floating label"
        app:msp_hint="hint"
        app:msp_multiline="true"/>

    <fr.ganfra.materialspinner.MaterialSpinner
        android:id="@+id/spinner2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:msp_enableErrorLabel="false"
        app:msp_enableFloatingLabel="false"
        app:msp_hint="hint"
        app:msp_hintColor="#0000FF"/>

    <fr.ganfra.materialspinner.MaterialSpinner
        android:id="@+id/spinner3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:msp_enableErrorLabel="false"
        app:msp_enableFloatingLabel="false"/>

    <fr.ganfra.materialspinner.MaterialSpinner
        android:id="@+id/spinner4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:msp_alignLabels="false"
        app:msp_baseColor="@color/spinner_base_color"
        app:msp_multiline="false"/>

    <fr.ganfra.materialspinner.MaterialSpinner
        android:id="@+id/spinner5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingStart="4dp"
        app:msp_alignLabels="false"
        tools:ignore="RtlSymmetry"/>

    <fr.ganfra.materialspinner.MaterialSpinner
        android:id="@+id/spinner6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:msp_dropDownHintView="@layout/dropdown_hint_item"
        app:msp_enableErrorLabel="false"
        app:msp_enableFloatingLabel="false"
        app:msp_hint="hint"
        app:msp_hintColor="#0000FF"
        app:msp_hintView="@layout/hint_item"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Show/hide error"
        android:onClick="activateError"/>

  </LinearLayout>
</ScrollView>
